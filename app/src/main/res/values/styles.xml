<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/layout_head_bg</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="radio_btn_common_style" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:textColor">@drawable/selector_common_radio_btn</item>
    </style>

    <style name="tab_radio_button_style" parent="radio_btn_common_style">
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">@dimen/font_13</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:width">0dp</item>
        <item name="android:button">@null</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dialogWindowAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
