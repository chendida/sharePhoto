<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/layout_avatar"
        android:layout_width="match_parent"
        android:layout_marginLeft="20px"
        android:layout_height="170px"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="140px"
            android:layout_height="140px"
            android:scaleType="centerCrop"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_marginLeft="30px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_photo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_below="@+id/tv_photo_name"
                android:layout_marginTop="2px"
                android:id="@+id/tv_image_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/on_new_num"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_go"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30px"
                android:layout_centerVertical="true"/>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:layout_below="@+id/layout_avatar"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_bg_color"/>
</com.zhy.autolayout.AutoRelativeLayout>