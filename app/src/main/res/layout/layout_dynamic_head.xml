<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layout_dynamic_top"
    >
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/layout_bg"
            android:layout_width="match_parent"
            android:layout_height="380px"
            >
            <ImageView
                android:id="@+id/iv_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/photo_bg"/>
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20px">
                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/layout_avatar"
                    android:layout_width="148px"
                    android:layout_height="148px"
                    android:background="@drawable/avatar_frame"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20px"
                    >
                    <ImageView
                        android:id="@+id/iv_my_avatar"
                        android:layout_width="144px"
                        android:layout_height="144px"
                        android:scaleType="centerCrop"
                        android:layout_centerInParent="true"
                        />
                </com.zhy.autolayout.AutoRelativeLayout>

                <TextView
                    android:id="@+id/tv_my_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/layout_avatar"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40px"
                    android:textSize="32px"
                    android:textColor="@color/white"
                    android:maxEms="6"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/layout_search"
            android:layout_below="@+id/layout_bg"
            android:layout_marginTop="20px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:background="@drawable/photo_view_search">
            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_search"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14px"/>
            <EditText
                android:id="@+id/et_search"
                android:layout_toRightOf="@+id/iv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="27px"
                android:textColorHint="@color/tv_text_color1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:background="@null"
                android:hint="@string/tv_search"
                android:textCursorDrawable="@null"
                android:focusable="false"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14px"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_picture"/>
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/layout_share_my_photo"
            android:layout_below="@+id/layout_search"
            android:layout_marginTop="20px"
            android:layout_width="match_parent"
            android:layout_height="80px">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_bg_color"/>
            <ImageView
                android:id="@+id/iv_two_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:src="@drawable/icon_two_code"/>
            <TextView
                android:layout_toRightOf="@+id/iv_two_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:text="@string/tv_share_my_photo"
                android:textColor="@color/black"
                android:textSize="30px"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20px"
                android:layout_centerVertical="true"
                android:src="@drawable/right_go"/>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
