<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include
        layout="@layout/layout_head"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="430px"
                android:minWidth="720px"
                android:background="@color/add_water_pic">
                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/layout_whole_water_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    >
                </com.zhy.autolayout.AutoRelativeLayout>
            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/layout_init_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                >
                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_marginTop="40px"
                    android:layout_marginBottom="40px"
                    android:layout_marginLeft="40px"
                    android:layout_marginRight="40px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/water_1001"
                    android:layout_centerHorizontal="true">
                    <com.zhy.autolayout.AutoRelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="160px"
                        android:layout_centerInParent="true"
                        >
                        <ImageView
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/iv_head"/>
                        <com.zq.dynamicphoto.ui.widge.StrokeTextView
                            android:id="@+id/tv_title1"
                            android:layout_width="wrap_content"
                            android:layout_height="80px"
                            android:textSize="32sp"
                            android:textColor="@color/red_color"
                            android:text="@string/tv_title_1001"
                            android:layout_centerHorizontal="true"
                            android:gravity="center_horizontal"
                            />
                        <com.zhy.autolayout.AutoRelativeLayout
                            android:layout_below="@+id/tv_title1"
                            android:layout_width="wrap_content"
                            android:layout_height="80px"
                            android:layout_centerHorizontal="true"
                            >
                            <com.zq.dynamicphoto.ui.widge.StrokeTextView
                                android:id="@+id/tv_title2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="30sp"
                                android:textColor="@color/water_bg_005"
                                android:text="@string/tv_quanchang"
                                />
                            <com.zq.dynamicphoto.ui.widge.StrokeTextView
                                android:layout_toRightOf="@+id/tv_title2"
                                android:id="@+id/tv_title3"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="30sp"
                                android:textColor="@color/red_color"
                                android:text="@string/tv_wuzhe"
                                />
                            <com.zq.dynamicphoto.ui.widge.StrokeTextView
                                android:layout_toRightOf="@+id/tv_title3"
                                android:id="@+id/tv_title4"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="30sp"
                                android:textColor="@color/water_bg_005"
                                android:text="@string/tv_qishou"
                                />
                        </com.zhy.autolayout.AutoRelativeLayout>
                    </com.zhy.autolayout.AutoRelativeLayout>
                </com.zhy.autolayout.AutoRelativeLayout>
                </com.zhy.autolayout.AutoRelativeLayout>
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </HorizontalScrollView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include
                layout="@layout/layout_water_label_operate"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
</com.zhy.autolayout.AutoLinearLayout>
