<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    >
    <include
        layout="@layout/layout_head"/>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="430px"
        android:background="@color/add_water_pic">
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/layout_whole_water_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            >
            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/layout_init_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                >
                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/layout_avatar_frame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">
                    <ImageView
                        android:id="@+id/iv_head"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/water_7014"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        />
                    <com.zq.dynamicphoto.ui.widge.StrokeTextView
                        android:id="@+id/tv_title1"
                        android:layout_width="720px"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:text="@string/tv_default_7014"
                        android:maxLines="1"
                        />
                    <com.zhy.autolayout.AutoRelativeLayout
                        android:visibility="gone"
                        android:layout_below="@+id/tv_title1"
                        android:id="@+id/layout_wx_and_icon"
                        android:layout_width="280px"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_centerHorizontal="true"
                        >
                        <ImageView
                            android:id="@+id/iv_wx_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/water_wx_icon"
                            android:layout_centerVertical="true"
                            />
                        <com.zq.dynamicphoto.ui.widge.StrokeTextView
                            android:id="@+id/tv_title2"
                            android:layout_width="wrap_content"
                            android:layout_toRightOf="@+id/iv_wx_icon"
                            android:layout_centerHorizontal="true"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:text="@string/tv_default_wx"
                            android:maxLines="1"
                            />
                    </com.zhy.autolayout.AutoRelativeLayout>
                </com.zhy.autolayout.AutoRelativeLayout>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_head1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/water_bottom_7004"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/tv_title1"/>
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
    <include
        layout="@layout/layout_water_recommend_operate"/>
</com.zhy.autolayout.AutoLinearLayout>
