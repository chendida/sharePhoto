<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="380px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="30px"
            >
            <ImageView
                android:id="@+id/iv_order_pic"
                android:layout_marginTop="20px"
                android:layout_width="180px"
                android:layout_height="180px"
                android:scaleType="centerCrop"
                />
            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/layout_order_good_title"
                android:layout_toRightOf="@+id/iv_order_pic"
                android:layout_marginLeft="20px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_order_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:layout_alignParentRight="true"
                    android:textSize="28px"
                    android:textColor="@color/tv_text_color5"
                    android:text="1"/>
                <TextView
                    android:layout_toLeftOf="@+id/tv_order_num"
                    android:id="@+id/tv_order_num_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:textSize="28px"
                    android:textColor="@color/tv_text_color5"
                    android:text="x"/>
                <TextView
                    android:id="@+id/tv_order_content"
                    android:layout_toLeftOf="@+id/tv_order_num_x"
                    android:layout_marginRight="15px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="28px"
                    android:layout_marginTop="30px"
                    android:singleLine="true"
                    android:maxLength="18"
                    android:ellipsize="end"
                    />
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_below="@+id/layout_order_good_title"
                android:layout_toRightOf="@+id/iv_order_pic"
                android:layout_marginLeft="20px"
                android:layout_marginTop="20px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tv_text_color5"
                    android:textSize="24px"
                    android:text="联系人:"
                    />
                <TextView
                    android:layout_toRightOf="@+id/tv_contact"
                    android:id="@+id/tv_contact_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tv_text_color5"
                    android:textSize="24px"
                    android:text="周某某"
                    />
                <TextView
                    android:id="@+id/tv_contact_phone"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tv_text_color5"
                    android:textSize="24px"
                    android:text="13584212584"
                    />
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_contact"
                    android:textColor="@color/tv_text_color5"
                    android:textSize="24px"
                    android:text="收货地址:广东省 深圳市 南山区 南山大道 24号某大厦商业中心B栋420哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
                    android:maxLines="2"
                    android:ellipsize="end"/>
            </com.zhy.autolayout.AutoRelativeLayout>
            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/layout_leave_msg"
                android:layout_below="@+id/iv_order_pic"
                android:layout_marginTop="20px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_leave_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_contact"
                    android:textColor="@color/tv_text_color5"
                    android:textSize="24px"
                    android:text="留言:广东省 深圳市 南山区 南山大道 24号某大厦商业中心B栋420哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
                    android:maxLines="2"
                    android:ellipsize="end"/>
            </com.zhy.autolayout.AutoRelativeLayout>
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_below="@+id/layout_leave_msg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/btn_cancel"
                    android:layout_width="150px"
                    android:layout_height="60px"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/order_btn_bg_cancel">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/tv_text_color1"
                        android:textSize="28px"
                        android:text="@string/cancel"/>
                </com.zhy.autolayout.AutoRelativeLayout>
                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_toLeftOf="@+id/btn_cancel"
                    android:layout_marginRight="10px"
                    android:id="@+id/btn_ok"
                    android:layout_width="150px"
                    android:layout_height="60px"
                    android:layout_centerVertical="true"
                    android:background="@drawable/order_btn_bg_other">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/tv_text_color1"
                        android:textSize="28px"
                        android:text="@string/tv_ok"/>
                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_toLeftOf="@+id/btn_ok"
                    android:layout_marginRight="10px"
                    android:id="@+id/btn_send_out_goods"
                    android:layout_width="150px"
                    android:layout_height="60px"
                    android:layout_centerVertical="true"
                    android:background="@drawable/order_btn_bg_other">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/tv_text_color1"
                        android:textSize="28px"
                        android:text="@string/tv_send_out_goods"/>
                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/layout_order_status"
                    android:layout_width="120px"
                    android:layout_height="50px"
                    android:layout_centerVertical="true"
                    android:background="@color/red_color">
                    <TextView
                        android:id="@+id/tv_order_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"
                        android:textSize="28px"
                        />
                </com.zhy.autolayout.AutoRelativeLayout>
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoRelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_bg_color"/>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>