<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    >
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout_outside"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_centerInParent="true"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:background="@drawable/corner"
        android:orientation="vertical">
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/layout_anchor_wx"
            android:layout_width="match_parent"
            android:layout_height="80px">
            <ImageView
                android:id="@+id/iv_anchor_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140px"
                android:src="@drawable/icon_anchor_weixin"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_anchor_wx"
                android:layout_toRightOf="@+id/iv_anchor_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28px"
                android:textColor="@color/tv_text_color5"
                android:layout_centerVertical="true"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_bg_color"/>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/layout_anchor_phone"
            android:layout_width="match_parent"
            android:layout_height="80px">
            <ImageView
                android:id="@+id/iv_anchor_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140px"
                android:src="@drawable/icon_phone"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_anchor_phone"
                android:layout_toRightOf="@+id/iv_anchor_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28px"
                android:textColor="@color/tv_text_color5"
                android:layout_centerVertical="true"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_bg_color"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120px">
            <TextView
                android:layout_marginTop="15px"
                android:id="@+id/tv_anchor_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:textColor="@color/tv_text_color5"
                android:layout_marginLeft="30px"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>