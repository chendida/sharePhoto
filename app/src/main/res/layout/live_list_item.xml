<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    >
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="220px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:background="@color/white">
        <ImageView
            android:id="@+id/anchor_cover"
            android:layout_width="220px"
            android:layout_height="220px"
            android:src="@drawable/vip_avatar"
            android:scaleType="centerCrop"
            />
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="220px"
            android:layout_height="220px">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/play_live"/>
            <ImageView
                android:id="@+id/iv_live_room_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_liveroom_number"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10px"
                android:layout_marginLeft="5px"/>
            <TextView
                android:id="@+id/tv_watch_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5px"
                android:layout_toRightOf="@+id/iv_live_room_number"
                android:maxLength="5"
                android:textColor="@color/white"
                android:textSize="24px"
                />

            <ImageView
                android:id="@+id/iv_live_room_dianzan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_live_room_dianzan"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10px"
                android:layout_marginRight="5px"/>
            <TextView
                android:id="@+id/tv_live_room_dinazan_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/iv_live_room_dianzan"
                android:layout_marginBottom="5px"
                android:maxLength="5"
                android:textColor="@color/white"
                android:textSize="24px"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_toRightOf="@+id/anchor_cover"
            android:layout_marginLeft="20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_live_title"
                android:layout_marginTop="20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tv_text_color5"
                android:textSize="30px"
                android:singleLine="true"
                android:maxLength="24"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/tv_nick"
                android:layout_below="@+id/tv_live_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:textColor="@color/tv_text_color2"
                android:text="@string/tv_default_app_name"
                />
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_below="@+id/tv_nick"
                android:layout_marginTop="20px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_live_pic1"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:scaleType="centerCrop"
                    />
                <ImageView
                    android:layout_toRightOf="@+id/iv_live_pic1"
                    android:layout_marginLeft="5px"
                    android:id="@+id/iv_live_pic2"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:scaleType="centerCrop"
                    />
                <ImageView
                    android:id="@+id/iv_live_pic3"
                    android:layout_toRightOf="@+id/iv_live_pic2"
                    android:layout_marginLeft="5px"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:scaleType="centerCrop"
                    />
                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/layout_goods_num"
                    android:layout_toRightOf="@+id/iv_live_pic3"
                    android:layout_marginLeft="5px"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:background="@color/colorBackground">
                    <com.zhy.autolayout.AutoRelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        >
                        <com.zhy.autolayout.AutoRelativeLayout
                            android:id="@+id/layout_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true">
                            <TextView
                                android:id="@+id/tv_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/tv_text_color5"
                                android:textSize="24px"
                                android:text="20"/>
                            <TextView
                                android:layout_toRightOf="@+id/tv_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/tv_text_color5"
                                android:textSize="24px"
                                android:text="件"
                                />
                        </com.zhy.autolayout.AutoRelativeLayout>
                        <TextView
                            android:layout_below="@+id/layout_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/tv_text_color5"
                            android:textSize="24px"
                            android:text="直播购"/>
                    </com.zhy.autolayout.AutoRelativeLayout>
                </com.zhy.autolayout.AutoRelativeLayout>
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>