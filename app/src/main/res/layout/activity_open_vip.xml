                    android:id="@+id/tv_code1_money_hint"
                    android:layout_below="@+id/tv_code1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="56px"
                    android:textColor="@color/open_vip_money_hint"
                    android:textSize="30px"
                    android:text="69"
                    />
