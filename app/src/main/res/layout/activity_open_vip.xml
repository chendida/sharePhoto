                    android:id="@+id/tv_no_vip"
                    android:layout_below="@+id/tv_vip_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16px"
                    android:textColor="@color/no_vip_color"
                    android:textSize="28px"
                    android:text="@string/tv_no_vip"
                    />
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/vip_bg">
                <ImageView
                    android:id="@+id/vip_icon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vip_icon"
                    android:layout_marginTop="30px"
                    android:layout_marginLeft="60px"
                    />
                <TextView
                    android:layout_toRightOf="@+id/vip_icon1"
                    android:layout_marginLeft="30px"
                    android:id="@+id/tv_code1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px"
                    android:textColor="@color/water_bg_005"
                    android:textSize="36px"
                    android:text="@string/tv_vip_code1"
                    />
                <TextView
                    android:layout_toRightOf="@+id/tv_code1"
                    android:id="@+id/tv_code1_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px"
                    android:textColor="@color/water_bg_005"
                    android:textSize="36px"
                    android:text="@string/tv_half_vip"
