                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="28px"
                        android:text="开启"
                        android:textColor="@color/btn_login_bg_color"
                        />
                </com.zhy.autolayout.AutoRelativeLayout>
                <TextView
                    android:layout_toRightOf="@+id/vip_icon1"
                    android:layout_marginLeft="30px"
                    android:id="@+id/tv_yuanjia1"
                    android:layout_below="@+id/tv_code1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60px"
                    android:textColor="@color/open_vip_hint"
                    android:textSize="24px"
                    android:text="@string/tv_yuanjia"
                    />
                <TextView
                    android:layout_toRightOf="@+id/tv_yuanjia1"
                    android:id="@+id/tv_code1_hint"
                    android:layout_below="@+id/tv_code1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60px"
                    android:textColor="@color/open_vip_hint"
                    android:textSize="24px"
                    android:text="@string/tv_vip_code2"
                    />
                <TextView
                    android:id="@+id/tv_xiangduyuanjia1"
                    android:layout_toRightOf="@+id/tv_code1_hint"
                    android:layout_below="@+id/tv_code1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60px"
                    android:textColor="@color/open_vip_hint"
                    android:textSize="24px"
                    android:text="@string/tv_xiangduiyuanjia"
