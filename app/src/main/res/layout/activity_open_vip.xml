                    android:layout_height="1px"
                    android:background="@color/line_bg_color"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"/>
            </com.zhy.autolayout.AutoRelativeLayout>

