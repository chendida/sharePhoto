<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    >
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_height="wrap_content"
        android:background="@drawable/corner"
        android:layout_centerInParent="true"
        >
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/layout_close"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignParentRight="true"
            >
            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_live_close"
                android:layout_centerInParent="true"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
        <TextView
            android:id="@+id/tv_vip_tequan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_close"
            android:textColor="@color/water_bg_005"
            android:text="@string/tv_vip_tequan"
            android:textSize="32px"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/tv_hint1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_text_color1"
            android:textSize="30px"
            android:text="@string/tv_vip_hint1"
            android:layout_below="@+id/tv_vip_tequan"
            android:layout_marginTop="40px"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/tv_hint2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_text_color1"
            android:textSize="30px"
            android:text="@string/tv_vip_hint2"
            android:layout_below="@+id/tv_hint1"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/tv_line"
            android:layout_marginTop="20px"
            android:layout_below="@+id/tv_hint2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_bg_color"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_below="@+id/tv_line"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:orientation="horizontal"
            >
            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/layout_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                >
                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_details"
                    android:layout_centerInParent="true"
                    android:textSize="34px"
                    android:textColor="@color/black"/>
            </com.zhy.autolayout.AutoRelativeLayout>

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/line_bg_color"
                android:layout_gravity="center"/>
            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/layout_sure"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="34px"
                    android:textColor="@color/btn_login_bg_color"
                    android:text="@string/tv_open_vip_quckly"
                    android:layout_centerInParent="true"
                    />
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>