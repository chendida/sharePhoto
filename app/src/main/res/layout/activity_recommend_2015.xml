<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    >
    <include
        layout="@layout/layout_head"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/layout_bg"
                android:layout_width="match_parent"
                android:layout_height="430px"
                android:background="@color/add_water_pic"
                >
                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/layout_whole_water_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <com.zhy.autolayout.AutoRelativeLayout
                        android:id="@+id/layout_init_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        >
                        <ImageView
                            android:id="@+id/iv_head1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/water_2015"
                            android:layout_centerHorizontal="true"
                            />
                        <com.zhy.autolayout.AutoRelativeLayout
                            android:id="@+id/layout_avatar_frame"
                            android:layout_width="238px"
                            android:layout_height="238px"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="40px"
                            >
                            <ImageView
                                android:id="@+id/iv_head"
                                android:layout_width="230px"
                                android:layout_height="230px"
                                android:src="@drawable/water_two_code"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                />
                        </com.zhy.autolayout.AutoRelativeLayout>

                        <com.zq.dynamicphoto.ui.widge.StrokeTextView
                            android:layout_marginTop="10px"
                            android:layout_below="@+id/layout_avatar_frame"
                            android:id="@+id/tv_title1"
                            android:layout_width="300px"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:textColor="@color/water_bg_005"
                            android:textSize="16sp"
                            android:text="@string/tv_default_app_name"
                            android:maxLines="1"
                            />
                        <com.zq.dynamicphoto.ui.widge.StrokeTextView
                            android:layout_below="@+id/tv_title1"
                            android:id="@+id/tv_title2"
                            android:layout_width="300px"
                            android:layout_toRightOf="@+id/iv_wx_icon"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:textColor="@color/water_bg_005"
                            android:textSize="14sp"
                            android:text="@string/tv_default_wx"
                            android:maxLines="1"
                            />
                        <com.zhy.autolayout.AutoRelativeLayout
                            android:visibility="gone"
                            android:layout_below="@+id/tv_title1"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/layout_wx_and_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:id="@+id/iv_wx_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/water_icon010"
                                android:layout_centerVertical="true"
                                />
                        </com.zhy.autolayout.AutoRelativeLayout>
                    </com.zhy.autolayout.AutoRelativeLayout>
                </com.zhy.autolayout.AutoRelativeLayout>
            </com.zhy.autolayout.AutoRelativeLayout>
            <include
                layout="@layout/layout_water_recommend_operate"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
</com.zhy.autolayout.AutoLinearLayout>
