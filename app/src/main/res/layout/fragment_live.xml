<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:orientation="vertical">
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout_bg"
        android:layout_width="match_parent"
        android:layout_height="380px"
        android:background="@drawable/photo_bg">
        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <ImageView
            android:layout_marginBottom="20px"
            android:id="@+id/iv_avatar"
            android:layout_width="148px"
            android:layout_height="148px"
            android:layout_marginTop="80px"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/tv_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32px"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_avatar"
            android:layout_marginTop="20px"
            />
        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24px"
            android:textColor="@color/tv_text_color1"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_nick"
            android:layout_marginTop="10px"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:background="@color/white">
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/layout_my_orders_num"
            android:layout_width="360px"
            android:layout_height="match_parent"
            android:layout_marginTop="30px"
            >
            <TextView
                android:id="@+id/tv_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="36px"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_marginTop="10px"
                android:layout_below="@+id/tv_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tv_text_color1"
                android:textSize="28px"
                android:layout_centerHorizontal="true"
                android:text="@string/order_num"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
        <TextView
            android:layout_width="1px"
            android:layout_height="100px"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/layout_my_orders_num"
            android:background="@color/line_bg_color"
            />
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/layout_my_balance"
            android:layout_width="360px"
            android:layout_height="match_parent"
            android:layout_marginTop="30px"
            android:layout_alignParentRight="true"
            >
            <TextView
                android:id="@+id/tv_diamond_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="36px"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_marginTop="10px"
                android:layout_below="@+id/tv_diamond_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tv_text_color1"
                android:textSize="28px"
                android:layout_centerHorizontal="true"
                android:text="@string/tv_my_balance"/>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoRelativeLayout>

    <!--我的订单-->
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout_my_orders"
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/iv_my_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_order"/>
        <TextView
            android:id="@+id/tv_my_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/iv_my_orders"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="30px"
            android:text="@string/tv_my_orders"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:layout_centerVertical="true"
            android:src="@drawable/right_go"/>
    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:layout_marginLeft="20px"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_bg_color"
        />
    <!--直播产品-->
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout_live_good"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/iv_live_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_live_good"/>
        <TextView
            android:id="@+id/tv_live_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/iv_live_good"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="30px"
            android:text="@string/tv_my_live_good"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:layout_centerVertical="true"
            android:src="@drawable/right_go"/>
    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:layout_marginLeft="20px"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_bg_color"/>

    <!--账户收益-->
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout_my_profit"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_my_profit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_profit"/>
        <TextView
            android:id="@+id/tv_my_profit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/iv_my_profit"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="30px"
            android:text="@string/tv_my_profit"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:layout_centerVertical="true"
            android:src="@drawable/right_go"/>
    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:layout_marginLeft="20px"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_bg_color"/>

    <!--消费清单-->
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout_my_consumption"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_my_consumption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_consumption"/>
        <TextView
            android:id="@+id/tv_my_consumption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/iv_my_consumption"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="30px"
            android:text="@string/consumption"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:layout_centerVertical="true"
            android:src="@drawable/right_go"/>
    </com.zhy.autolayout.AutoRelativeLayout>

    <Button
        android:id="@+id/btn_open_live"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginTop="40px"
        android:background="@drawable/one_key_share"
        android:textSize="28px"
        android:textColor="@color/btn_login_bg_color"
        android:text="@string/tv_open_live"/>
</com.zhy.autolayout.AutoLinearLayout>