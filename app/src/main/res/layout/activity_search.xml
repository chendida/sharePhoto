<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    >
    <include
        layout="@layout/layout_search_head"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout_spinner"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/filter_publish_and_time"
            android:textSize="28px"
            android:layout_marginLeft="20px"
            android:textColor="@color/black"/>
        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_close"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:layout_centerVertical="true"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/rcl_search_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/layout_spinner_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_bg_color"
            android:layout_marginLeft="20px"/>
        <!--标签-->
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/layout_label"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/kinds"
                android:textSize="28px"
                android:layout_marginLeft="20px"
                android:textColor="@color/black"/>
            <ImageView
                android:id="@+id/iv_right1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_go"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20px"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_label_name"
                android:layout_toLeftOf="@+id/iv_right1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20px"
                android:layout_centerVertical="true"
                android:textColor="@color/tv_text_color1"
                android:textSize="28px"
                android:maxLines="1"
                android:maxLength="14"
                android:text="@string/no_limit"
                android:ellipsize="end"
                />
        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_bg_color"
            android:layout_marginLeft="20px"/>
        <!--发布人-->
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/layout_issuer"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/promulgator"
                android:textSize="28px"
                android:layout_marginLeft="20px"
                android:textColor="@color/black"/>
            <ImageView
                android:id="@+id/iv_right2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_go"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20px"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_contact_name"
                android:layout_toLeftOf="@+id/iv_right2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20px"
                android:layout_centerVertical="true"
                android:textColor="@color/tv_text_color1"
                android:textSize="28px"
                android:maxLines="1"
                android:maxLength="14"
                android:ellipsize="end"
                android:text="@string/no_limit"
                />
        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_bg_color"
            android:layout_marginLeft="20px"/>
        <!--发布时间-->
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/layout_time"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/publish_time"
                android:textSize="28px"
                android:layout_marginLeft="20px"
                android:textColor="@color/black"/>
            <ImageView
                android:id="@+id/iv_right3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_go"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20px"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_toLeftOf="@+id/iv_right3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20px"
                android:layout_centerVertical="true"
                android:textColor="@color/tv_text_color1"
                android:textSize="28px"
                android:maxLines="1"
                android:text="@string/no_limit"
                />
        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_bg_color"
            android:layout_marginLeft="20px"/>
        <!--清空和筛选-->
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:background="@color/white">
            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/layout_clear"
                android:layout_width="360px"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/clear"
                    android:textSize="28px"
                    android:layout_marginLeft="20px"
                    android:textColor="@color/tv_text_color1"
                    android:layout_centerInParent="true"/>
            </com.zhy.autolayout.AutoRelativeLayout>
            <TextView
                android:id="@+id/tv_line"
                android:layout_toRightOf="@+id/layout_clear"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/line_bg_color"/>
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_toRightOf="@+id/tv_line"
                android:id="@+id/layout_filter"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter"
                    android:textSize="28px"
                    android:layout_marginLeft="20px"
                    android:textColor="@color/tv_text_select"
                    android:layout_centerInParent="true"/>
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:visibility="gone"
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcl_dynamic_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout_init"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <ImageView
            android:id="@+id/iv_no_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="260px"
            android:layout_marginLeft="310px"
            android:src="@drawable/notsearch"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_no_search"
            android:layout_marginTop="20px"
            android:layout_centerHorizontal="true"
            android:textSize="24px"
            android:textColor="@color/tv_text_color1"
            android:text="@string/no_search"/>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
