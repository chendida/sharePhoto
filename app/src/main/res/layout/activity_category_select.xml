<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    >
    <include
        layout="@layout/layout_head"/>
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="81px"
        android:background="@color/white"
        >
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/layout_search_label"
            android:layout_width="match_parent"
            android:layout_height="80px">
            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:src="@drawable/icon_search"/>
            <EditText
                android:id="@+id/et_search"
                android:layout_toLeftOf="@+id/layout_clear_input"
                android:layout_marginRight="30px"
                android:layout_marginLeft="20px"
                android:layout_toRightOf="@+id/iv_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:textSize="28px"
                android:textColor="@color/tv_text_color1"
                android:textColorHint="@color/tv_text_color1"
                android:maxLines="1"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:hint="@string/tv_search"/>
            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/layout_clear_input"
                android:layout_alignParentRight="true"
                android:layout_width="60px"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20px"
                    android:layout_centerVertical="true"
                    android:src="@drawable/search_close"/>
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoRelativeLayout>
        <TextView
            android:layout_below="@+id/layout_search_label"
            android:id="@+id/tv_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_bg_color"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcl_label_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</com.zhy.autolayout.AutoLinearLayout>
