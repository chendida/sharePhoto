<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    >
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="670px"
        android:layout_alignParentBottom="true"
        android:background="@color/white">
        <include
            android:id="@+id/layout_seekbar"
            layout="@layout/layout_watermark_common_seekbar"/>
        <TextView
            android:id="@+id/tv_line"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/line_bg_color"
            android:layout_below="@+id/layout_seekbar"
            />
        <ScrollView
            android:layout_below="@+id/tv_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include
                layout="@layout/layout_water_colors"/>
        </ScrollView>
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_above="@+id/layout_content"
        android:id="@+id/layout_cancel"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>