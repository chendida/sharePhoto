<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alpha">
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/layout_process"
        android:layout_width="match_parent"
        android:layout_height="240px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:background="@drawable/corner"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center"
        >
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/tv_hint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="28px"
                android:text="@string/tv_save_loading"/>
            <TextView
                android:id="@+id/tv_save_num"
                android:layout_toRightOf="@+id/tv_hint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="28px"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
        <SeekBar
            android:layout_marginTop="40px"
            android:id="@+id/seek_bar_process"
            android:layout_marginLeft="38px"
            android:layout_marginRight="38px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="10px"
            android:layout_toRightOf="@+id/watermark_num"
            android:progressDrawable="@drawable/watermark_seekbar_bg"
            android:thumb="@null"
            android:layout_centerVertical="true"
            />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>