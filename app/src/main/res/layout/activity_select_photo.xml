<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_center"
        android:layout_width="match_parent"
        android:layout_height="96px"
        >
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/tv_album_name"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text=""
                android:textColor="#111111"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:id="@+id/iv_showalbum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_album_name"
                android:src="@drawable/icon_sanjiao"
                android:rotation="360"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/tv_cancel"
        android:layout_width="100px"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:src="@drawable/icon_water_back"
            android:layout_centerInParent="true"
            />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout_select"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="270px"
        android:background="@color/colorBackground">
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/layout_hint"
            android:layout_width="match_parent"
            android:layout_height="82px">
            <ImageView
                android:id="@+id/iv_start_water_mark"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_start_work"
                android:layout_marginRight="20px"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_marginLeft="20px"
                android:id="@+id/tv_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="28px"
                android:text="已选择"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_select_num"
                android:layout_toRightOf="@+id/tv_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="28px"
                android:text="0"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_toRightOf="@+id/tv_select_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="28px"
                android:text="张（最多100张）"
                android:layout_centerVertical="true"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_marginLeft="6px"
            android:id="@+id/rcl_select_photo_list"
            android:layout_below="@+id/layout_hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </com.zhy.autolayout.AutoRelativeLayout>

    <GridView
        android:id="@+id/gv_photo"
        android:layout_above="@+id/layout_select"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_center"
        android:horizontalSpacing="5dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="choose"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:visibility="gone"
         />
    <RelativeLayout
        android:id="@+id/rl_album"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#aa000000"
        android:layout_below="@id/rl_center"
        android:layout_marginTop="-48dp"
        android:visibility="gone"
        >
        <ListView
            android:id="@+id/lv_albumlist"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:background="#ffffff" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/icon_sanjiao"
            android:visibility="visible"
            android:layout_alignTop="@+id/lv_albumlist"
            android:layout_marginTop="-13dp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>
