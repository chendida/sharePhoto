<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout_content"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="575px"
        android:layout_alignParentBottom="true">
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/layout_title"
            android:layout_marginTop="20px"
            android:layout_marginRight="20px"
            android:layout_marginLeft="20px"
            android:layout_width="match_parent"
            android:layout_height="95px"
            android:background="@drawable/water_title_input_bg">
            <EditText
                android:layout_marginLeft="20px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:textCursorDrawable="@color/red_color"
                android:layout_centerVertical="true"
                android:textSize="32px"
                android:textColor="@color/water_bg_005"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/layout_title_size"
            android:layout_marginTop="10px"
            android:layout_below="@+id/layout_title"
            android:layout_width="match_parent"
            android:layout_height="90px">
            <TextView
                android:layout_marginLeft="20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32px"
                android:textColor="@color/tv_text_color1"
                android:layout_centerVertical="true"
                android:text="@string/tv_size_space"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_go"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20px"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_bg_color"
                android:layout_alignParentBottom="true"/>
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/layout_title_color"
            android:layout_below="@+id/layout_title_size"
            android:layout_width="match_parent"
            android:layout_height="90px">
            <TextView
                android:layout_marginLeft="20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32px"
                android:textColor="@color/tv_text_color1"
                android:layout_centerVertical="true"
                android:text="@string/tv_color"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_go"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20px"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_bg_color"
                android:layout_alignParentBottom="true"/>
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/layout_title_align"
            android:layout_below="@+id/layout_title_color"
            android:layout_width="match_parent"
            android:layout_height="90px">
            <TextView
                android:layout_marginLeft="20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32px"
                android:textColor="@color/tv_text_color1"
                android:layout_centerVertical="true"
                android:text="@string/tv_align"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_go"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20px"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_bg_color"
                android:layout_alignParentBottom="true"/>
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/layout_title_stroke"
            android:layout_below="@+id/layout_title_align"
            android:layout_width="match_parent"
            android:layout_height="90px">
            <CheckBox
                android:layout_marginLeft="20px"
                android:id="@+id/check_title_stroke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:button="@drawable/select_water_setting"
                />
            <TextView
                android:layout_toRightOf="@+id/check_title_stroke"
                android:layout_marginLeft="20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32px"
                android:textColor="@color/tv_text_color1"
                android:layout_centerVertical="true"
                android:text="@string/tv_stroke"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_go"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20px"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_bg_color"
                android:layout_alignParentBottom="true"/>
        </com.zhy.autolayout.AutoRelativeLayout>


        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/layout_title_bg_color"
            android:layout_below="@+id/layout_title_stroke"
            android:layout_width="match_parent"
            android:layout_height="90px">
            <CheckBox
                android:layout_marginLeft="20px"
                android:id="@+id/check_title_bg_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:button="@drawable/select_water_setting"
                />
            <TextView
                android:layout_toRightOf="@+id/check_title_bg_color"
                android:layout_marginLeft="20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32px"
                android:textColor="@color/tv_text_color1"
                android:layout_centerVertical="true"
                android:text="@string/tv_bg_color"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_go"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20px"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_bg_color"
                android:layout_alignParentBottom="true"/>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout_cancel"
        android:layout_above="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>